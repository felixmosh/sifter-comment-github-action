{
  "name": "sifter-comment-github-action",
  "version": "2.0.0",
  "description": "A Sifter comment github action",
  "license": "MIT",
  "author": "felixmosh",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist/ && git add -f dist/",
    "release": "release-it --only-version && yarn update:major-tag",
    "update:major-tag": "git tag -d v2 && git push --delete origin v2 && git tag v2 && git push origin --tags"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^18.19.10",
    "@vercel/ncc": "^0.38.1",
    "axios": "^1.6.7",
    "execa": "^6.1.0",
    "prettier": "^3.2.4",
    "release-it": "^17.0.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "hooks": {
      "after:bump": [
        "npx auto-changelog -p",
        "yarn build"
      ]
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
